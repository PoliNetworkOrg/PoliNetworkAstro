---
import ContentButton from "../../../components/ContentButton.astro";
import NavigationButton from "../../../components/NavigationButton.astro";
import Basics from "../../../layouts/Basics.astro";
import Default from "../../../layouts/Default.astro";
import { Languages } from "../../../utils/types";

export async function getStaticPaths() {
    return Languages.values().map((language) => {
    return {
      params: { lang: language },
      props: { language },
    };
  });
}

const buttons = [
    {
        title: ["ciao", "hello"],
        desc: ["ciao", "hello"],
        url: "",
        img: "fa-solid fa-o"
    },
    {
        title: ["ciao", "hello"],
        desc: ["ciao", "hello"],
        url: "",
        img: ""
    },
    {
        title: ["ciao", "hello"],
        desc: ["ciao", "hello"],
        url: "",
        img: ""
    },
]



const { language } = Astro.props;

const langCode = Languages.toNum(language);
---
<Basics title="learnmore" language={language}>
    {buttons.map((button) => {
        return <NavigationButton href={button.url} title={button.title[langCode]} body={button.desc[langCode]} img={button.img}></NavigationButton>
    })}
</Basics>